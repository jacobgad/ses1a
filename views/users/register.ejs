<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="css/home.css" />

<div class="container">
	<div class="row mt-3">
		<div class="col-md-6">
			<div class="card mt-3 p-6 col-py-6" style="width: 25rem;">
				<form action="/register" method="POST" class="needs-validation" novalidate>
					<div class="card-body" style="height: 25rem;">
						<h5 class="card-title">Register Account</h5>
						<div class="mb-3 mt-3">
							<label class="form-label" for="username">Account Username</label>
							<input class="form-control" type="text" name="username" id="username" required />
							<div class="invalid-feedback">Please choose a username.</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="email">Account Email</label>
							<input class="form-control" type="email" name="email" id="email" required />
							<div class="invalid-feedback">Please enter a valid email address.</div>
						</div>
						<div class="mb-3">
							<label class="form-label" for="password">Password</label>
							<input class="form-control" type="password" name="password" id="password" required />
							<div class="invalid-feedback">Please enter a strong password.</div>
						</div>		
					</div>
					<div class="card-footer">
						<div class="mt-2 mb-2">
							<button class="btn btn-primary">Register Account</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>