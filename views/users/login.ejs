<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="css/login.css" />

<div class="container mt-5">
	<div class="row mt-3">
		<div class="col-md-6">
			<div class="card shadow mt-3 p-6 col-py-6 border-info border-5" style="width: 35rem; border-radius: 8%; padding-left:10%; padding-right:10%">
				<form action="/login" method="POST" class="needs-validation" novalidate>
					<div class="card-body mx-auto my-3">

						<br>

						<div class="text-center">
							<h1 class="card-title">WELCOME BACK</h5>
						</div>
						

						<div class="mb-3">
							
							<br>

							<input class="form-control" type="text" id="username" name="username" autofocus required />
							
							<div class="valid-feedback">Looks good!</div>
							<div class="invalid-feedback">Please enter your username.</div>
						</div>
						<div class="mb-3">
							
							<input class="form-control" type="password" id="password" name="password" required />
							<div class="valid-feedback">Looks good!</div>
							<div class="invalid-feedback">Please enter your password</div>
						</div>
						<a href="/forgot">Forgot Password?</a>	

						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>

						<div class="d-grid gap-3">
							<button class="btn btn-info">Log In</button>
							<p>Don't have an account? <a href="/register">Click Here</a></p>
						</div>

					</div>
				</form>
			</div>
		</div>
	</div>
</div>