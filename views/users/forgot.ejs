<% layout('/layouts/boilerplate') %>

<div class="card card shadow col-lg-3 offset-lg-4 mt-5">
	<img
		src="https://images.unsplash.com/photo-1582139329536-e7284fece509?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1400&q=80"
		class="card-img-top"
	/>
	<div class="card-body">
		<h5 class="card-title">Forgot Password</h5>
		<form action="/forgot" method="post" class="needs-validation" novalidate>
			<div class="mb-3">
				<label class="form-label" for="email">Email</label>
				<input class="form-control" type="email" name="email" id="email" required />
				<div class="invalid-feedback">Please enter a valid email</div>
			</div>
			<button class="btn btn-primary" type="submit">Reset Password</button>
		</form>
	</div>
</div>
