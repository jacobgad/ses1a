<% layout('/layouts/boilerplate') %>

<link rel="stylesheet" href="css/menu.css" />

<div id="app" class="container">
	<div class="row pt-5">
		<div class="col p-2 lr-opacity">
			<div class="pb-4 text-center">
				<img src="Images/ArclightLogo.png" class="rounded-pill w-50" alt="Arclight Logo" />
			</div>
			<ul class="ps-2 list-group list-group-flush bg-transparent w-75">
			<!--<ul class=" list-group list-group-flush bg-transparent w-auto">-->	
				<a href="#" class="list-group-item  list-group-item-action text-dark bg-transparent pb-0 border-dark">
					<h6>Menu</h6>
					<p>Our Delicious Dishes</p>
				</a>
				<a href="#" class="list-group-item list-group-item-action bg-transparent pb-0 border-dark">
					<h6>Booking</h6>
					<p>Dine in With Us</p>
				</a>
				<a href="#" class="list-group-item list-group-item-action active-page pb-0 border-dark">
					<h6>Gallery</h6>
					<p>Photos of Our Venue</p>
				</a>
				<a href="#" class="list-group-item list-group-item-action bg-transparent">
					<h6>Contact</h6>
					<p>Get in Touch</p>
				</a>
			</ul>
			<div class="d-flex pb-3 justify-content-center gap-4">
				<img width="40" height="40" src="Images/fbLogo.png" alt="Facebook Link" />
				<img width="40" height="40" src="Images/IgLogo.png" alt="Instagram Link" />
				<img width="40" height="40" src="Images/GoogleLogo.png" alt="Google Page Link" />
			</div>
			<p>1266, Lake Floyd Circle, Aiden, KS, Kansas, 67512</p>  
		</div>
    <div class="col-9 align-items-center mid-opacity">
      <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="Images/PistachioQuiche.jpg" class="mx-auto rounded d-block w-75" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>Pistachio Quiche</h5>
              <p>Peppery arugula pesto adds brightness in this creamy, rich quiche.</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="Images/Steak.jpg" class="mx-auto rounded d-block w-75" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>Classic French Steak au Poivre</h5>
              <p> perfectly cooked steak crusted with cracked peppercorns</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="Images/" class="mx-auto rounded d-block w-75" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h5>Menu Item 3</h5>
              <p>Menu Item Description</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
	</div>
</div>